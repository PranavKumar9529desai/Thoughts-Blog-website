generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  // put the database url in .env and accelerate url in wrangler.toml so the backend application connects with the pool instead of database directly 

}


model User  {
  id String @id @default(uuid())
  // uuid is popular way to store ids in the database , basically  doesn't give the same ids
  email String @unique
  name String?
  password String
  posts Posts[]
  userInfo String?
  likesTable Likes[]
}

model Posts {
  id        String  @id @default(uuid())
  title     String
  content   String
  published Boolean @default(false)
  author    User    @relation(fields: [authorId] ,references:[id])
  authorId  String
  createdAt DateTime @default(now()) 
  Likes Likes[]
  Tags Tags  
  // one Post can be liked by many user
  }


model Likes {
  blogsId String  
  userId String 
  User User @relation(fields: [userId],references: [id])
  Blog Posts @relation(fields: [blogsId] ,references: [id])
  @@id([userId , blogsId])
  // creating a composite key consisting userid and blogid 
} 

// this are only aviable tags
enum Tags {
  React 
  Ai
  Tech
  Coding
}